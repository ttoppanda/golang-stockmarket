#!/usr/bin/env bash

services=`cat services`

source mock

# LOCAL
if [[ $1 == "local" ]]; then
  for service in $services; do
    cd $service && go install && cd ..
  done

  redis-server > /dev/null &

  mongod > /dev/null &

  node ./web_service/server/app.js &

  for service in $services; do
    $GOPATH/bin/$service &
  done

  # wait for the db to set up after dropping the previous one
  sleep 15
  echo "ready"
  time trade
fi


# TRADE
if [[ $1 == "trade" ]]; then
  time trade
fi


# INSTALL
if [[ $1 == "install" ]]; then
  for service in $services; do
    cd $service && go install && cd ..
  done
fi


# LIST
if [[ $1 == "list" ]]; then

  ps aux | grep redis-server | grep -v grep

  ps aux | grep mongod | grep -v grep

  ps aux | grep web_service | grep -v grep

  for service in $services; do
    ps aux | grep $service | grep -v grep
  done
fi


# TEST
if [[ $1 == "test" ]]; then
  for service in $services; do
    cd $service && go test && cd ..
  done
fi


# KILL
if [[ $1 == "kill" ]]; then

  pkill -x redis-server

  pkill -x mongod

  pkill -x web_service

  for service in $services; do
    pkill -x $service
  done
fi

